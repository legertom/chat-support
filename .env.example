# Core app + auth
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chat_support
AUTH_SECRET=

# Google OAuth (optional if BASIC_AUTH_* is configured)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Local username/password auth (optional, useful for local/dev)
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=change-me
# BASIC_AUTH_EMAIL=admin@clever.com
# BASIC_AUTH_ROLE=admin

# Provisioning / access policy
DEFAULT_STARTING_CREDIT_CENTS=200
DEFAULT_INVITE_EXPIRY_DAYS=14
INITIAL_ADMIN_EMAILS=admin1@clever.com,admin2@clever.com

# Model provider keys (server-side)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
# BYOK encryption key material (required outside local development):
# - 32-byte key encoded as base64/base64url, or 64-char hex
USER_API_KEYS_ENCRYPTION_KEY=
USER_API_KEYS_ENCRYPTION_KEY_ID=primary-2026-02
# Optional rotation keyring for decrypt-only older v2 payloads (format: keyId=key,keyId=key)
# USER_API_KEYS_DECRYPTION_KEYRING=previous-2026-01=<32-byte-base64-or-hex-key>
# Optional temporary compatibility secrets for legacy v1 payloads
# USER_API_KEYS_LEGACY_DECRYPTION_SECRETS=<old-secret-1>,<old-secret-2>
# GOOGLE_API_KEY can be used instead of GEMINI_API_KEY
# GOOGLE_API_KEY=

# Optional API base URL overrides
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Optional path override for retrieval dataset
# CHUNKS_PATH=/absolute/path/to/chunks.jsonl
