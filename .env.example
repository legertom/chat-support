# Optional default API keys (server-side). You can also paste a key in the UI per session.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
# GOOGLE_API_KEY can be used instead of GEMINI_API_KEY
# GOOGLE_API_KEY=

# Optional app-level Basic Auth (protects UI + API routes).
# Set both values to enable. Leave both blank to disable.
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

# Client API-key override is disabled by default for safer deployments.
# Keep both false if you want keys server-side only.
ALLOW_CLIENT_API_KEY_OVERRIDE=false
NEXT_PUBLIC_ALLOW_CLIENT_API_KEY_OVERRIDE=false

# Optional API base URL overrides
# OPENAI_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Optional path override for chunk file
# CHUNKS_PATH=/absolute/path/to/chunks.jsonl
